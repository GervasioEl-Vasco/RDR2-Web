RewriteEngine On

# Existing files/directories
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# API calls
RewriteRule ^api/ - [L]

# SPA routes - semua route valid arahkan ke index.html
RewriteRule ^(home|about|character|game|quiz|)/?$ index.html [L]

# Assets
RewriteRule \.(js|css|png|jpg|gif|ico|svg|woff|woff2|ttf|eot|json)$ - [L]

# Fallback to index.html
RewriteRule ^ index.html [L]